<div class="d-flex justify-content-center align-items-center pt-5">
  <div class="col-md-6">
    <div class="d-flex justify-content-end mb-4">
      <%= link_to '<i class="bi bi-plus"></i>&nbsp; Nova Tarefa'.html_safe, new_task_path, class: 'btn btn-primary me-2' %>
      <%= button_to '<i class="bi bi-download"></i>&nbsp; Realizar Web Scraping'.html_safe, run_scraping_tasks_path, method: :post, class: 'btn btn-primary' %>
    </div>
    <h2 class="text-center mb-4">Lista de Tarefas</h2>
    <table class="table table-striped">
      <thead>
        <tr class="text-center">
          <th><%= t('activerecord.attributes.task.status') %></th>
          <th><%= t('activerecord.attributes.task.url') %></th>
          <th colspan="3">AÃ§Ãµes</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr class="text-center">
            <td class="align-middle"><%= t("activerecord.attributes.task.statuses.#{task.status}") %></td>
            <td class="align-middle"><%= task.url %></td>
            <td class="align-middle"><%= link_to 'Visualizar', task_path(task), class: 'btn btn-link' %></td>
            <td class="align-middle"><%= link_to 'Editar', edit_task_path(task), class: 'btn btn-link' %></td>
            <td class="align-middle"><%= button_to 'Excluir', task_path(task), method: :delete, class: 'btn btn-link text-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
